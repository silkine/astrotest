---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'About Me';

const identity = {
  firstName: 'Silke',
  country: 'Germany',
  occupation: 'Principal Product Designer',
  hobbies: ['design', 'micro electronics', '3d printing'],
};

const skills = ['HTML', 'CSS', 'JavaScript', 'React', 'Astro', 'Writing Docs'];
const happy = true;
const finished = true;
const goal = 3;
const skillColorLight = 'blue';
const skillColorDark = 'white';
const fontWeight = 'bold';
const textCase = 'uppercase';
---

<BaseLayout pageTitle={pageTitle}>
  <style define:vars={{ skillColorLight, skillColorDark, fontWeight, textCase }}>
    .skill {
      /* pick a default at runtime */
      --skillColorCurrent: var(--skillColorLight);

      color: var(--skillColorCurrent);
      font-weight: var(--fontWeight);
      text-transform: var(--textCase);
    }

    :global(html.dark) .skill {
      --skillColorCurrent: var(--skillColorDark);
    }
  </style>
  <h2>... and my new Astro site!</h2>
  <p>Here are some facts about me</p>
  <ul>
    <li>My name is {identity.firstName}</li>
    <li>I live in {identity.country} and I work as a {identity.occupation}</li>
    {
      identity.hobbies.length >= 2 && (
        <li>
          Two of my hobbies are {identity.hobbies[0]} and {identity.hobbies[1]}
        </li>
      )
    }
  </ul>
  {happy && <p>I am happy to be learning Astro!</p>}
  {finished && <p>I finished this tutorial!</p>}
  {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}
  <p>My skills are:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>
